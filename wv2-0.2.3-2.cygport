DESCRIPTION=
HOMEPAGE="http://wvware.sourceforge.net/"
SRC_URI="http://umn.dl.sourceforge.net/wvware/${P}.tar.bz2"

PKG_NAMES="${PN} ${PN}-devel"
PKG_HINTS='setup devel'
PKG_CONTENTS[0]='usr/bin/*.dll usr/share/'
PKG_CONTENTS[1]='usr/bin/*-config usr/include/ usr/lib/'

src_install() {
	cd ${B}
	cyginstall

	dodoc ${S}/doc/{HACKING,LINKS}

	docinto html
	dodoc ${S}/doc/*.html ${S}/doc/*.png
}
